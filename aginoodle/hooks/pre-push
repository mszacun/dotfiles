PUSH_STOPPING_PHRASES="debugger
pdb"

PUSH_STOPPING_PHRASES_NOT_LOOKED_IN_IGNORED_FILES="
TODO
XXX
FIXME"

for phrase in $PUSH_STOPPING_PHRASES
do
    ag $phrase
    if [ "$?" -eq "0" ]; then
        exit 1
    fi
done

for phrase in $PUSH_STOPPING_PHRASES_NOT_LOOKED_IN_IGNORED_FILES
do
    ag $phrase --ignore pylint.cfg --ignore src/backlog/static/lib/
    if [ "$?" -eq "0" ]; then
        exit 1
    fi
done
