#!/bin/bash

# Get task command


call_todo_sh_command() {
    TASK_COMMAND="task ${@}"
    task $@
    cd $TODO_DIR
    git add .
    git commit -m "$TASK_COMMAND" > /dev/null
}

call_git_command() {
    git -C $TODO_DIR $@
}

if [ $1 == 'git' ]; then
    shift;
    call_git_command $@
else
    call_todo_sh_command $@
fi

exit 0
