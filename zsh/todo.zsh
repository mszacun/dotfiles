GLOBAL_TODO_DIR="$HOME/.todo/"

alias t="TODO_DIR=$GLOBAL_TODO_DIR task-git-wrapper"
alias ta="t add"

alias taa="ta priority:A"
alias tab="ta priority:B"
alias tac="ta priority:C"
alias tad="ta priority:D"
alias tae="ta priority:E"
alias taf="ta priority:F"

alias tl="t"
alias tdo="t done"
alias trm="t delete"
alias tggu="t git pull --rebase"
alias tggp="t git push"


alias lt="task rc.data.location=./todo/"
alias lta="lt add "
alias ltaa="lta priority:A"
alias ltab="lta priority:B"
alias ltac="lta priority:C"
alias ltl="lt"
alias ltdo="lt done"

