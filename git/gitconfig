[user]
	name = Marcin Szachun
	email = marcin.szachun@identt.pl

[core]
    editor = vim

[color]
	ui = true

[push]
	default = simple

[pull]
    rebase = true

[rebase]
    autoSquash = true
    autoStash = true

[alias]
    editModified = !$EDITOR $(git status --short | awk '$1 ~ /^M|A|U/ {print $2}' )                                                                                                                      
    editAll = !$EDITOR $(git status --short | awk '$1 ~ /^M|A|U|\\?/ {print $2}' )

[remote "origin"]
	prune = true

[credential]
	helper = !pass-git-helper $@
[pager]
	branch = false
[merge]
	tool = vimdiff
